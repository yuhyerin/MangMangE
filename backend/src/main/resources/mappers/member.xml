<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daeng.nyang.mapper.MemberMapper">
	
	<select id="searchAll" resultType="member">
		select *
		from user
	</select>

 	<select id="search" parameterType="String" resultType="member">
		select *
		from user
		where user_id=#{user_id}
	</select>

	<select id="findPwd" parameterType="member" resultType="member">
		select *
		from user
		where user_email = #{user_email}
	</select> 
	
	<select id="login" parameterType="member" resultType="member">
		select *
		from user
		where user_email = #{user_email}
		and user_password = #{user_password}
	</select>

	 <insert id="signUp" parameterType="member">
		insert into user (user_name, user_id, user_email, user_password)
		values (#{user_name}, #{user_id}, #{user_email}, #{user_password})
	</insert>
</mapper>









